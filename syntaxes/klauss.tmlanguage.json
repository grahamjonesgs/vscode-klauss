{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.klauss",
  "name": "Klauss Assembly",
  "fileTypes": [
    "kla"
  ],
  "patterns": [
    {
      "match": "\\s*#\\w*",
      "name": "storage"
    },
    {
      "match": "\\s*\\w*:",
      "name": "keyword.control"
    },
    {
      "match": "\\s*\\$\\w*",
      "name": "keyword.operator"
    },
    {
      "match": "!include",
      "name": "keyword.support"
    },
    {
      "match": "\\b\\s*%\\d*\\b",
      "name": "support.function.mnemonic.arithmetic.klauss"
    },

    {
      "match": "\\b(?i)(COPY|AND|OR|XOR|CMPRR|ADDRR|MINUSRR|SETR|ADDV|MINUSV|CMPRV|INCR|DECR|ANDV|ORV|XORV|SETFR|NEGR|SHLR|SHRR|SHLAR|SHRAR|JMP|JMPZ|JMPNZ|JMPE|JMPNE|JMPC|JMPNC|JMPO|JMPNO|CALL|CALLZ|CALLNZ|CALLE|CALLNE|CALLC|CALLNC|CALLO|CALLNO|RET|CDCDMR|LCDDATAR|LCDCMDV|LCDDATAV|LCD|LEDR|SWR|7SEG1R|7SEG2R|7SEGR|RGB1R|RGB2R|LEDV|7SEG1V|7SEG2V|7SEGBLANK|RGB1V|RGB2V|PUSH|POP|PUSHV|TESTMSG|NEWLINE|TXMEM|TXR|TXMEMR|TXCHARMEMR|INTSETRR|MEMSETRR|MEMREADRR|MEMSETR|MEMREADR|DELAYR|NOP|HALT|RESET|DELAYV)\\b",
      "name": "support.function.mnemonic.arithmetic.klauss"
    },
    
    {
      "name": "storage.stack.klauss",
      "begin": "\\{\\h*",
      "end": "\\h*\\}\\^?",
      "patterns": [
        {
          "include": "#registers_list"
        }
      ]
    },
    {
      "include": "#registers"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#numerics"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "match": "([;@]|//|#).*$",
          "name": "comment.klauss"
        },
        {
          "begin": "\\/\\*",
          "beginCaptures": {
            "0": {
              "name": "comment.begin.klauss"
            }
          },
          "endCaptures": {
            "0": {
              "name": "comment.end.klauss"
            }
          },
          "end": "\\*\\/",
          "name": "comment.klauss"
        }
      ]
    },
    "conditions": {
      "patterns": [
        {
          "match": "ne|eq|cs|hs|cc|lo|mi|pl|vs|vc|hi|ls|lt|le|gt|ge|al"
        }
      ]
    },
    "numerics": {
      "patterns": [
        {
          "match": "#?-?(0x|&)[0-9a-fA-F_]+\\b",
          "name": "constant.numeric.hex.klauss"
        },
        {
          "match": "#?[0-9]+\\b",
          "name": "constant.numeric.dec.klauss"
        },
        {
          "match": "#?0b[01]+\\b",
          "name": "constant.numeric.bin.klauss"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "match": "W{1}",
          "name": "storage.register.klauss"
        }
      ]
    },
    "registers_list": {
      "patterns": [
        {
          "match": "(\\w+)(?:\\h*\\-\\h*(\\w+))?(?:,\\h*([a-zA-Z0-9,\\-\\h]+))?",
          "captures": {
            "1": {
              "patterns": [
                {
                  "include": "#registers"
                }
              ]
            },
            "2": {
              "patterns": [
                {
                  "include": "#registers"
                }
              ]
            },
            "3": {
              "patterns": [
                {
                  "include": "#registers_list"
                }
              ]
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.klauss",
          "begin": "\"",
          "end": "\""
        },
        {
          "match": "\\'\\S\\'",
          "name": "string.char.klauss"
        },
        {
          "name": "invalid.illegal.string.klauss",
          "match": "\"[^\"]"
        },
        {
          "name": "invalid.illegal.char.klauss",
          "match": "\\'\\S{2,}\\'"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "(\\b|#)-?[a-zA-Z_][0-9a-zA-Z_]*\\b",
          "name": "variable.named.klauss"
        }
      ]
    }
  }
}